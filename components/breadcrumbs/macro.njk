{% macro govukBreadcrumbs(params) %}
<div class="breadcrumbs{%- if params.classes %} {{ params.classes }}{% endif %}"{% for attribute, value in params.attributes %} {{attribute}}="{{value}}"{% endfor %}>
	<ol>
	{% for item in params.items %}
		{%- if item.href %}
			<li><a href="{{ item.href }}">{{ item.html | safe if item.html else item.text }}</a></li>
		{% else %}
			<li aria-current="page">{{ item.html | safe if item.html else item.text }}</li>
		{% endif -%}
	{% endfor %}
	</ol>
</div>
{% endmacro %}