{% macro govukPhaseBanner(params) %}
{% from "../tag/macro.njk" import govukTag -%}
<div class="phase-banner{%- if params.classes %} {{ params.classes }}{% endif %}"{% for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
  <p>
    {{ govukTag({
      "text": params.tag.text,
      "html": params.tag.html,
      "classes": params.tag.classes,
      "attributes": params.tag.attributes
    }) | trim }}
    {%- if params.html.length or params.text.length %}
    <span>
      {{ params.html | safe if params.html else params.text }}
    </span>
    {% endif -%}
  </p>
</div>
{% endmacro %}