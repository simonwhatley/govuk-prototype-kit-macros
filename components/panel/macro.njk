{% macro govukPanel(params) %}
<div class="{%- if params.classes %} {{ params.classes }}{% else %}confirmation{% endif %}"
	{%- for attribute, value in params.attributes %} {{attribute}}="{{value}}"{% endfor %}>
	<h{{ params.headingLevel | default(1) }} class="{%- if params.titleClasses %} {{ params.titleClasses }}{% else %}heading-xlarge{% endif %}">
		{{ params.titleHtml | safe if params.titleHtml else params.titleText }}
	</h{{ params.headingLevel | default(1) }}>
	{%- if params.html or params.text %}
	<p>
		{{ params.html | safe if params.html else params.text }}
	</p>
	{% endif -%}
</div>
{% endmacro %}