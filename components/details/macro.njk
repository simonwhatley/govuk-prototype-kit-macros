{% macro govukDetails(params) %}
<details {%- if params.id %} id="{{params.id}}"{% endif %} {%- if params.classes %} class="{{ params.classes }}"{% endif %} {%- for attribute, value in params.attributes %} {{attribute}}="{{value}}"{% endfor %} {{- " open" if params.open }}>
	<summary>
		<span class="summary">
			{{ params.summaryHtml | safe if params.summaryHtml else params.summaryText }}
		</span>
	</summary>
	<div class="panel panel-border-narrow">
		{{ params.html | safe if params.html else params.text }}
	</div>
</details>
{% endmacro %}